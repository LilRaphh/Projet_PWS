{% extends 'base.html.twig' %}

{% block title %}Vin Admin{% endblock %}

{% block body %}

    <div class="w-full flex justify-center">
        <div class="pt-10 flex gap-6 flex-wrap w-4/5 pb-10">
            {% for vin in vins %}
                <div class="w-full max-w-sm bg-white border border-gray-200 rounded-xl shadow">
                    <a class="flex justify-center" href="{{ path('app_vin_show', {'id': vin.id}) }}">
                        <img class="m-8 rounded-3xl aspect-square w-80 hover:-translate-y-5 hover:drop-shadow-lg duration-500 ease-in-out"  src="{{ vich_uploader_asset(vin) }}" alt="product image" />
                    </a>
                    <div class="px-5 pb-5">
                        <a href="{{ path('app_vin_show', {'id': vin.id}) }}">
                            <h5 class="text-xl font-semibold tracking-tight text-gray-900 hover:text-yellow-600 duration-500 ease-in-out">{{ vin.nom }}</h5>
                        </a>
                        <div class="pt-5 flex items-center justify-between">
                            <span class="text-3xl font-bold text-gray-900">{{ vin.prix }} â‚¬</span>
                            {% if vin.quantitestock == 0 %}
                            <a class="opacity-75 text-white bg-gray-300 cursor-default focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">Ajouter au panier</a>
                            {% else %}
                            <a href="{{ path('app_panier_add', {'id': vin.id}) }}" class="disabled:opacity-75 text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">Ajouter au panier</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
