{% extends 'base.html.twig' %}

{% block title %}Vin{% endblock %}

{% block body %}
    <div class="pt-5 text-center">
        <h1 class="text-3xl font-bold">{{ vin.nom }}</h1>
        <a class="text-amber-500" href="{{ path('app_vin_index') }}">Revenir à la liste des articles</a>
    </div>

    <div class="w-full">
        <div class="pt-10 flex flex-col items-center">
            <img class="rounded-3xl aspect-square w-96"  src="{{ vich_uploader_asset(vin) }}" alt="product image" />
            <div class="mt-5 w-96 border-t-2 border-black">
                <span class="text-xl">Prix: {{ vin.prix }} €</span>
                <p></p>
                <span class="text-xl">Quantité en stock: {{vin.QuantiteStock}}</span>
                <p>{{ vin.description | raw }}</p>
            </div>
            {% if app.user %}
            <a href="{{ path('app_panier_add', {'id': vin.id}) }}" class="mt-5 text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">Ajouter au panier</a>
            {% endif %}
        </div>
    </div>

{% endblock %}
