<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        <h1><a href="{{path('app_vin_index')}}">Nos Vins</a></h1> 
        <p>
            {% if app.user %}
            <h1><a href="{{path('app_panier_show', {'id': app.user.id})}}">Votre Panier</a></h1>
            Bonjour {{ app.user.nom }} - <a href="{{ path('app_user_profile') }}">Modifier mon profil</a> - <a href="{{ path('app_logout') }}">Se déconnecter</a>
            <br>
            {% if is_granted('ROLE_ADMIN') %}         <a href="{{path('admin')}}">passer en mode admin</a>                  {% endif %}
            
            {% else %}
                On se connaît ? <a href="{{ path('app_login') }}">Se connecter</a> 

            {% endif %}
            
        </p>
        {% block body %}{% endblock %}
    </body>
</html>

